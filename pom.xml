	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/imagej/imagej-launcher/issues</url>
	</issueManagement>
	<ciManagement>
		<system>Travis CI</system>
		<url>https://travis-ci.org/imagej/imagej-launcher</url>
	</ciManagement>

	<properties>
		<package-name>net.imagej.launcher</package-name>
		<main-class>net.imagej.launcher.ClassLauncher</main-class>

		<license.licenseName>bsd_2</license.licenseName>
		<license.copyrightOwners>ImageJ developers.</license.copyrightOwners>
		<license.projectName>ImageJ software for multidimensional image processing and analysis.</license.projectName>

		<scijava.jvm.version>1.6</scijava.jvm.version>

		<target.architecture />
		<debug.option />
		<skipTests>true</skipTests>
		<cmake.generator.option />
		<make.binary>make</make.binary>

		<!-- NB: Deploy releases to the SciJava Maven repository. -->
		<releaseProfiles>deploy-to-scijava</releaseProfiles>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.scijava</groupId>
			<artifactId>scijava-common</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>test</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>net.imagej.launcher.ChangeIcon</mainClass>
					<arguments>
						<argument>${project.build.directory}/${ij.executable.name}</argument>
						<argument>${basedir}/logo/ImageJ.ico</argument>
					</arguments>
					<classpathScope>test</classpathScope>
					<includePluginDependencies>true</includePluginDependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.honton.chas</groupId>
				<artifactId>exists-maven-plugin</artifactId>
				<version>0.0.5</version>
				<executions>
					<execution>
						<goals>
							<goal>remote</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>make</id>
						<phase>compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<exec executable="cmake" dir="${project.build.directory}" failonerror="true">
									<arg line="${cmake.generator.option} ${basedir} -DTARGET_ARCHITECTURE=${target.architecture} -DDEBUG_OPTION=${debug.option}" />
								</exec>
								<exec executable="${make.binary}" dir="${project.build.directory}" failonerror="true">
									<arg line="VERBOSE=1" />
								</exec>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>amd64-Linux</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<ij.executable.name>ImageJ-linux64.exe</ij.executable.name>
			</properties>
		</profile>

		<profile>
			<id>i386-Linux</id>
			<activation>
				<os>
					<name>Linux</name>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<ij.executable.name>ImageJ-linux32.exe</ij.executable.name>
				<target.architecture>x86</target.architecture>
			</properties>
		</profile>

		<profile>
			<id>i386-Windows</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<ij.executable.name>ImageJ-win32.exe</ij.executable.name>
				<target.architecture>x86</target.architecture>
				<make.binary>mingw32-make</make.binary>
				<cmake.generator.option>-G "MinGW Makefiles"</cmake.generator.option>
			</properties>
		</profile>

		<profile>
			<id>amd64-Windows</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<ij.executable.name>ImageJ-win64.exe</ij.executable.name>
				<make.binary>mingw32-make</make.binary>
				<cmake.generator.option>-G "MinGW Makefiles"</cmake.generator.option>
			</properties>
		</profile>

		<profile>
			<id>macOS</id>
			<activation>
				<os>
					<name>Mac OS X</name>
				</os>
			</activation>
			<properties>
				<ij.executable.name>ImageJ-macosx.exe</ij.executable.name>
			</properties>
		</profile>

		<profile>
			<id>debug</id>
			<properties>
				<debug.option>-g</debug.option>
			</properties>
		</profile>
	</profiles>
</project>
